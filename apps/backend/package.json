{
	"name": "backend",
	"description": "Qwertix Backend API & WebSocket Server",
	"private": true,
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"build": "tsup",
		"start": "node dist/main.mjs",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run tests",
		"test:e2e": "vitest run e2e",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@fastify/cors": "^11.2.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "catalog:",
		"fastify": "^5.6.2",
		"pg": "^8.16.3",
		"uuid": "^13.0.0",
		"ws": "^8.18.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@qwertix/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"@types/pg": "8.16.0",
		"@types/ws": "^8.18.1",
		"drizzle-kit": "catalog:",
		"supertest": "catalog:",
		"tsup": "catalog:",
		"tsx": "^4.21.0",
		"typescript": "catalog:",
		"vite-tsconfig-paths": "catalog:",
		"vitest": "catalog:"
	}
}
