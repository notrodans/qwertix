{
	"name": "backend",
	"description": "Qwertix Backend API & WebSocket Server",
	"private": true,
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"build": "tsup",
		"start": "bun dist/main.mjs",
		"lint": "tsc --noEmit -p tsconfig.json && biome check .",
		"lint:fix": "tsc --noEmit -p tsconfig.json && biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run tests",
		"test:e2e": "vitest run e2e -c vitest.config.e2e.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@qwertix/room-contracts": "workspace:*",
		"fastify": "^5.7.2",
		"@fastify/cors": "^11.2.0",
		"@fastify/jwt": "^10.0.0",
		"@fastify/passport": "^3.0.2",
		"@fastify/secure-session": "^8.3.0",
		"@t3-oss/env-core": "catalog:",
		"awilix": "^12.0.5",
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"drizzle-orm": "catalog:",
		"drizzle-kit": "catalog:",
		"passport-local": "^1.0.0",
		"pg": "^8.18.0",
		"uuid": "^13.0.0",
		"ws": "^8.19.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@qwertix/tsconfig": "workspace:*",
		"@types/node": "catalog:",
		"@types/passport-local": "^1.0.38",
		"@types/pg": "8.16.0",
		"@types/supertest": "^6.0.3",
		"@types/ws": "^8.18.1",
		"pino-pretty": "^13.1.3",
		"supertest": "catalog:",
		"tsup": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"vite-tsconfig-paths": "catalog:",
		"vitest": "catalog:"
	}
}
