{
	"name": "qwertix",
	"description": "An app for typing competitions between people",
	"private": true,
	"workspaces": {
		"packages": ["apps/*", "libs/*"],
		"catalog": {
			"typescript": "^5.9.3",
			"@biomejs/biome": "2.3.10",
			"@types/bun": "^1.3.5",
			"@types/node": "^22.10.2",
			"zod": "^4.2.1",
			"typescript-eslint": "^8.50.1",
			"eslint": "^9.39.2",
			"eslint-plugin-boundaries": "^5.3.1",
			"eslint-import-resolver-typescript": "^4.4.4",
			"eslint-plugin-import": "^2.32.0",
			"globals": "^16.5.0",
			"vitest": "^4.0.16",
			"@vitest/coverage-v8": "^4.0.16",
			"jsdom": "^27.3.0",
			"@testing-library/react": "^16.3.1",
			"@testing-library/jest-dom": "^6.9.1",
			"@testing-library/dom": "^10.4.1",
			"playwright": "^1.57.0",
			"@playwright/test": "^1.57.0",
			"vite": "8.0.0-beta.4",
			"@types/supertest": "^6.0.2",
			"tsup": "^8.5.1",
			"vite-plugin-node": "7.0.0",
			"vite-tsconfig-paths": "^6.0.3",
			"supertest": "^7.1.4",
			"drizzle-kit": "^0.31.8",
			"drizzle-orm": "^0.45.1"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@types/bun": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"eslint-import-resolver-typescript": "catalog:",
		"eslint-plugin-boundaries": "catalog:",
		"eslint-plugin-import": "catalog:",
		"globals": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:"
	},
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"dev:frontend": "bun run --filter frontend dev",
		"dev:backend": "bun run --filter backend dev",
		"build": "bun run --filter '*' build",
		"start": "bun run --filter '*' start",
		"lint": "bun run --filter '*' lint",
		"lint:fix": "bun run --filter '*' lint:fix",
		"format": "biome format --write .",
		"typecheck": "bun run --filter '*' build",
		"test": "bun run --filter '*' test",
		"test:e2e": "bun run --filter '*' test:e2e",
		"test:all": "bun run test && bun run test:e2e",
		"docker:test": "docker compose -f docker-compose.test.yml up -d db-test",
		"docker:test:down": "docker compose -f docker-compose.test.yml down"
	},
	"repository": {
		"type": "git",
		"url": "github.com/notrodans/qwertix"
	},
	"keywords": ["qwertix"],
	"author": "notrodans@gmail.com",
	"license": "MIT"
}
